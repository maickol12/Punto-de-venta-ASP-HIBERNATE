<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/salepoint_v1</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="connection.pool_size">1</property>
        <!-- Lista de archivos que van a hacer mapeados con la base de datos -->
       	<mapping resource="Model/TipoUsuarioModel.hbm.xml" />
        <mapping resource="Model/UsuarioModel.hbm.xml"/>
        <mapping resource="Model/clienteModel.hbm.xml"/>
   		<mapping resource="Model/SucursalesModel.hbm.xml"/>
   		<mapping resource="Model/CajaModel.hbm.xml"/>
   		<mapping resource="Model/VentaModel.hbm.xml"/>
    </session-factory>
    
</hibernate-configuration>
